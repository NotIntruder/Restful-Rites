---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing"
    title="Stellar Pricing for Every Journey"
    subtitle="Choose the perfect plan that aligns with your goals."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Get Started"
    subtitle="Customize according to your needs to best suit your requirements."
    prices={[
      {},
      {
        title: 'Essential Package',
        subtitle: 'Comprehensive tools and arrangements for basic planning',
        price: 4999,
        period: 'Customizable',
        items: [
          {
            description: 'Customize your plan with a range of features and templates',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '#',
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Price-related features"
    subtitle="Discover the advantages of choosing a Customizable package that suits your needs."
    columns={2}
    items={[
      {
        title: 'Budget Friendly',
        description: 'Customizable pricing makes it easy to make a package that fits your budget and requirements.',
        icon: 'tabler:stairs',
      },
      {
        title: 'Transparent Pricing',
        description: 'Clearly displayed pricing details for each addon, with no hidden costs or unexpected charges.',
        icon: 'tabler:flip-vertical',
      },
      {
        title: 'Secure Payment Methods',
        description: 'Secure payment gateways to protect your financial information during transactions.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Pay for What You Need',
        description: `Pay only for the services you need and avoid unnecessary expenses, making it a truly personalized and cost-efficient experience.`,
        icon: 'tabler:accessible',
      },
      {
        title: 'Platform Reviews',
        description: 'Find and Compare vendors on our platform and choose accordingly. Making it truly a one-stop solution for all your needs.',
        icon: 'tabler:chevrons-up',
      },
      {
        title: '24H support',
        description: 'Questions answered via live chat, email or phone, every calendar day.',
        icon: 'tabler:headset',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="A guided journey from plans to a positive impact"
    tagline="simplified process"
    isReversed={true}
    items={[
      {
        title: 'Explore options',
        icon: 'tabler:number-1',
      },
      {
        title: 'Sign Up / Log In',
        icon: 'tabler:number-2',
      },
      {
        title: 'Customize your plan',
        icon: 'tabler:number-3',
      },
      {
        title: 'Compare and Schedule',
        icon: 'tabler:number-4',
      },
      {
        title: 'Enter payment details',
        icon: 'tabler:number-5',
      },
      {
        title: 'Confirmation',
        icon: 'tabler:number-6',
      },
      {
        title: 'Track at Ease',
        icon: 'tabler:number-7',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1536816579748-4ecb3f03d72a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Pricing FAQs"
    subtitle="Choosing the right options is important, and we're here to answer your questions. If you have queries about our pricing options, you're in the right place."
    columns={1}
    items={[
      {
        title: 'Do the plans come with customer support?',
        description:
          'Absolutely, all plans include access to our dedicated customer support to assist you with any queries or concerns.',
      },
      {
        title: 'Can I switch between addons later?',
        description:
          'Certainly! You can schedule changes to your plan within only 24hrs of your confirmation.',
      },
      {
        title: 'What payment methods do you accept?',
        description:
          'We accept major credit cards and online payment methods to ensure a convenient and secure transaction process.',
      },
      {
        title: 'Are there any hidden fees beyond the displayed cost?',
        description:
          'No, the displayed cost is the final cost. There are no hidden fees or additional charges. Platform fees may apply.',
      },
    ]}
  />
